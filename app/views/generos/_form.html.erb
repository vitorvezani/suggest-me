<div class="row">
	<div class="col-md-4 col-md-offset-4">
	  <%= form_for(@genero) do |f| %>
	    <%= render 'compartilhado/mensagens_erro', object: f.object %>
	    <div class="form-group">
	    <%= f.label :nome, "Genero" %>
	    <%= f.text_field(:nome, class: "form-control" ) %>
	    </div>
	    <div class="form-group">
	    <%= f.label :descricao, "Descrição" %>
	    <%= f.text_area :descricao, rows: 4, class: "form-control" %>
	    </div>
	    <hr>
	    <%= f.submit "Enviar", class: "btn btn-large btn-primary" %>
	    <p></p>
	  <% end %>
	</div>
</div>