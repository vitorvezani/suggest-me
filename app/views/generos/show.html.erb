<%= render "compartilhado/breadcrumb", pag: @genero.nome %>

<div class="row">
  <aside class="col-md-3">
    <section>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
              <h4> <%= @genero.nome %> </h4>
          </h3>
        </div>
        <div class="panel-body">
            <label> <%= @genero.try(:descricao)%> </label>
        </div>
      </div>
      <% if is_admin? %>
        <%= link_to "Excluir", @genero, method: :delete %> |
      <% end %>
      <% if signed_in? %>
        <%= link_to 'Editar', edit_genero_path(@genero) %> |
      <% end %>
      <%= link_to 'Voltar', generos_path %>
      <%= novo_flag @genero %>
    </section>
  </aside>
  <div class="col-md-4 col-md-offset-1">
      <%= render "itens_relacionados", itens: @itens %>
  </div>
  <%= will_paginate @itens,:previous_label => " << Anterior", :next_label => "Proximo >>", renderer: BootstrapPagination::Rails %>
</div>
