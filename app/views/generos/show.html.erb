<div class="row">
  <aside class="col-md-3">
    <section>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
              <h4> <%= @genero.nome %> </h4>
          </h3>
        </div>
        <div class="panel-body">
            <label> <%= @genero.try(:descricao)%> </label>
        </div>
      </div>
    </section>
  </aside>
  <div class="col-md-4 col-md-offset-1">
      <%= render "itens_relacionados", itens: @itens %>
  </div>
</div>
<%= link_to 'Editar', edit_genero_path(@genero) %> |
<%= link_to 'Voltar', generos_path %>
