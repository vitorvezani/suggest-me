<ol class="breadcrumb">
  <li class="Active">Home</li>
</ol>

<hr>
<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">
    <h1><%= @project_name %></h1>
    <p>Sistema de recomendação de livros, filmes, jogos e músicas que são gerados a partir do seu gosto! Para mais informações</p>
    <p><a href="/suggestions/sobre" class="btn btn-primary btn-lg" role="button">Saiba mais &raquo;</a></p>
  </div>
</div>
<hr>
<div class="row">
	<div class="col-xs-4">
		<%= form_tag({ controller: :itens, action: :index }, method: "get") do %>
		  <%= label_tag(:q, "Procura por:") %>
		  <%= text_field_tag(:q) %>
		  <p></p>
		  <%= submit_tag("Procurar!", class: "btn btn-primary") %>
		<% end %>
	</div>
	<div class="col-xs-4">
		<h3>Ultimos usuários logados:</h3>
		<ul class="list-group">
			<% @ultimos_usuarios.each do |usuario| %>
	      <li class="list-group-item">
	    		<img src=<%= usuario.get_image %> alt="profile pic" height="42" width="42" class="img-rounded">
	        <%= link_to usuario.username, usuario_path(usuario) %>
	      </li>
			<% end %>
		</ul>
	</div>
	<div class="col-xs-4">
		<h3>Ultimos itens visitados:</h3>
		<ul class="list-group">
			<% @ultimos_itens.each do |item| %>
				<li class="list-group-item">
					<img src=<%= item.get_image %> alt="profile pic" height="42" width="42" class="img-rounded">
					<%= link_to item.get_name, item_path(item) %>
				</li>
			<% end %>
		</ul>
	</div>
</div>