<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> proibiram este item de ser salvo:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@item) do |f| %>
      <div class="form-group">
      <%= f.label :categoria_id, "Categoria" %>
      <%= f.collection_select(:categoria_id, Categoria.order(:descricao), :id, :descricao) %>
      </div>
      <div class="form-group">
      <%= f.label :nome_ptbr, "Nome em Português" %>
      <%= f.text_field :nome_ptbr, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :nome_en, "Nome em Inglês" %>
      <%= f.text_field :nome_en, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :descricao %>
      <%= f.text_field :descricao, class: "form-control" %>
      </div>
      <hr>
      <%= f.submit "Enviar", class: "btn btn-large btn-primary" %>
      <p></p>
    <% end %>
  </div>
</div>
<% end %>