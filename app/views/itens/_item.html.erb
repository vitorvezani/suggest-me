<tr>
  <td><%= link_to item.get_name, item %></td>
  <td><small> <%= truncate(item.descricao,{ :length => 50, omission: '... (continua)' }) %> </small></td>
  <td>
  	<%= @avaliacoes[item.id][1].to_s %><span class="glyphicon glyphicon-thumbs-up"> </span> 
  	<%= @avaliacoes[item.id][0].to_s %><span class="glyphicon glyphicon-thumbs-down"></span>
  </td>
  <div id="categorias">
    <td><span class="label <%= get_label_type item %>"><%= link_to item.categoria.descricao, categoria_path(item.categoria), class: "categoria"%></span></td>
  <div>
  <% if is_admin? %>
    <td>
    	<%= link_to "Excluir", item, method: :delete %>
      | <%= link_to "Editar", edit_item_path(item) %>
    </td>
  <% end %>
</tr>