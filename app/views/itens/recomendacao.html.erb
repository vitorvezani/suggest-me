
    <%= render "compartilhado/breadcrumb", pag: "Recomendações" %>

    <% if @num_avaliacoes <= GlobalConstants::NUM_AVALIACOES %>

      <h3><span class="label label-warning">Opss</span> Não foi possível realizar as recomendações </h3>

      <p>Você precisa ter mais que <%= GlobalConstants::NUM_AVALIACOES %> avaliações no total.
         Comece por <%= link_to "aqui", itens_path %>!
      </p>

    <% else %>
    
      <ul id="collaborative-recommendation" class = "nav nav-tabs" >
        <li>
          <a href="#filmes" data-toggle = "tab"><span class="glyphicon glyphicon-film"></span> Filmes </a>
        </li>
        <li>
          <a href="#musicas" data-toggle = "tab"><span class="glyphicon glyphicon-music"></span> Musicas</a>
        </li>
        <li>
          <a href="#jogos" data-toggle = "tab"><span class="glyphicon glyphicon-tower"></span> Jogos</a>
        </li>
        <li>
          <a href="#livros" data-toggle = "tab"><span class="glyphicon glyphicon-book"></span>Livros</a>
        </li>
      </ul>
      <!-- Filmes -->
      <div class = "tab-content">
        <!-- Filmes -->
        <div class = "tab-pane fade" id="filmes">
          <div class="row">
            <div class="panel panel-default">
              <div class="panel-heading"><h1><span class ="glyphicon glyphicon-film"></span> Filmes</h1></div>
              <div class="panel-body">
                <% @count = 1 %>
                <% @filmes.each do |filme| %>
                  <% if @count % 3 == 0 %>
                    <div class="row">
                  <% end %>
                  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
                    <div class= "thumbnail align-center">
                      <div class = "caption">
                        <h3><%= filme.nome_ptbr %></h3>
                        <p><%= truncate(filme.descricao,{ :length => 30, omission: '...' }) %></p>
                        <p><%= link_to "Veja Mais", item_path(filme) %> &raquo;</p>
                      </div>
                    </div>
                  </div>
                  <% if @count % 3 == 0 %>
                    </div>
                    <hr>
                  <% end %>
                  <% @count = @count + 1 %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!-- Musicas -->
        <div class = "tab-pane fade" id="musicas">
            <div class="row">
              <div class="panel panel-default">
                <div class="panel-heading"><h1><span class ="glyphicon glyphicon-music"></span> Musicas</h1></div>
                <div class="panel-body">
                  <% @count = 1 %>
                  <% @musicas.each do |musica| %>
                    <% if @count % 3 == 0 %>
                      <div class="row">
                    <% end %>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
                      <div class= "thumbnail align-center">
                        <div class = "caption">
                          <h3><%= musica.nome_ptbr %></h3>
                          <p><%= truncate(musica.descricao,{ :length => 30, omission: '...' }) %></p>
                          <p><%= link_to "Veja Mais", item_path(musica) %> &raquo;</p>
                        </div>
                      </div>
                    </div>
                    <% if @count % 3 == 0 %>
                      </div>
                      <hr>
                    <% end %>
                    <% @count = @count + 1 %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <!-- Jogos -->
        <div class = "tab-pane fade" id="jogos">
            <div class="row">
              <div class="panel panel-default">
                <div class="panel-heading"><h1><span class ="glyphicon glyphicon-tower"></span> Jogos</h1></div>
                <div class="panel-body">
                  <% @count = 1 %>
                  <% @jogos.each do |jogo| %>
                    <% if @count % 3 == 0 %>
                      <div class="row">
                    <% end %>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
                      <div class= "thumbnail align-center">
                        <div class = "caption">
                          <h3><%= jogo.nome_ptbr %></h3>
                          <p><%= truncate(jogo.descricao,{ :length => 30, omission: '...' }) %></p>
                          <p><%= link_to "Veja Mais", item_path(jogo) %> &raquo;</p>
                        </div>
                      </div>
                    </div>
                    <% if @count % 3 == 0 %>
                      </div>
                      <hr>
                    <% end %>
                    <% @count = @count + 1 %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <!-- Livros -->
        <div class = "tab-pane fade" id="livros">
            <div class="row">
              <div class="panel panel-default">
                <div class="panel-heading"><h1><span class ="glyphicon glyphicon-book"></span> Livros</h1></div>
                <div class="panel-body">
                  <% @count = 1 %>
                  <% @livros.each do |livro| %>
                    <% if @count % 3 == 0 %>
                      <div class="row">
                    <% end %>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
                      <div class= "thumbnail align-center">
                        <div class = "caption">
                          <h3><%= livro.nome_ptbr %></h3>
                          <p><%= truncate(livro.descricao,{ :length => 30, omission: '...' }) %></p>
                          <p><%= link_to "Veja Mais", item_path(livro) %> &raquo;</p>
                        </div>
                      </div>
                    </div>
                    <% if @count % 3 == 0 %>
                      </div>
                      <hr>
                    <% end %>
                    <% @count = @count + 1 %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      </div>

    <% end %>