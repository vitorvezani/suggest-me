<%= form_for(@usuario) do |f| %>
<%= render 'compartilhado/mensagens_erro', object: f.object %>
<% end %>

<div class="row">
  <%= form_for(@usuario) do |f| %>
  <div class="col-md-5 col-md-offset-1">
    <div class="form-group">
      <%= f.label :username, "Username" %>*
      <%= f.text_field :username, class: "form-control", placeholder: "stephen.hawking" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "E-mail" %>
      <%= f.text_field :email, class: "form-control", placeholder: "stephen.hawking@email.com", disabled: true %>
    </div>
    <div class="form-group">
      <%= f.label :primeiro_nome, "Primeiro Nome" %>
      <%= f.text_field :primeiro_nome, class: "form-control", placeholder: "Stephen" %>
    </div>
    <div class="form-group">
      <%= f.label :ultimo_nome, "Último Nome" %>
      <%= f.text_field :ultimo_nome, class: "form-control", placeholder: "Hawking" %>
    </div>
    <div class="form-group">
      <%= label_tag nil, "E-mail publico?" %>
      <%= f.check_box :email_publico %>
    </div>
    <hr>
  </div>
  <!-- Lado direito -->
  <div class="col-md-5">
    <div class="form-group">
      <%= f.label :sexo, "Sexo" %>
      <%= f.select :sexo, options_for_select([%w(Masculino M), %w(Feminino F)]) %>
    </div>
    <div class="form-group">
      <%= f.label :dt_aniversario, "Data de Nascimento" %>
      <%= f.date_field :dt_aniversario, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :info, "Sobre Você" %>
      <%= f.text_area :info, rows: 7,class: "form-control" %>
    </div>
    <hr>
  </div>
  <div class="row">
    <div class="col-md-5 col-md-offset-2">
      <%= link_to 'Cancelar', usuario_path(@usuario), class: "btn btn-large btn-warning" %>
    </div>
    <div class="col-sm-3">
      <%= f.submit "Enviar", class: "btn btn-large btn-primary" %>
    </div>
  </div>
  <p>* Atributos Obrigatórios </p>
  <% end %>
</div>
