<%= form_for(@usuario) do |f| %>
<%= render 'compartilhado/mensagens_erro', object: f.object %>
<% end %>

<%= render "compartilhado/breadcrumb", pag: "Editar Preferências" %>

<h1>Editar Preferências</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@usuario, :url=> { action: "update_preferences", id: @usuario.id }, method: :patch) do |f| %>
      <div class="form-group">
        <%= f.label :max_rec_colaborativa, "Número Max. de Recomendações por Categoria" %>
        <%= f.number_field :max_rec_colaborativa , { in: 1...31, class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.label :max_rec_conteudo, "Número Max. de Recomendações por Item" %>
        <%= f.number_field :max_rec_conteudo, { in: 1...31, class: "form-control" } %>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= link_to 'Cancelar', usuario_path(@usuario), class: "btn btn-large btn-warning" %>
        </div>
        <div class="col-md-6">
          <%= f.submit "Enviar", class: "btn btn-large btn-primary" %>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>
