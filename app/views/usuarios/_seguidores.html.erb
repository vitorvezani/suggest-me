<% if @seguidores.any? %>
  <!-- Loop para cada usuario_seguidor do usuário -->
  <ul class="list-group">
  <% @seguidores.each do |usuario_seguidor| %>
      <li class="list-group-item">
    		<img src=<%= usuario_seguidor.image %> alt="profile pic" height="42" width="42" class="img-rounded">
        <%= link_to usuario_seguidor.username, usuario_path(usuario_seguidor) %>
      </li>
  <% end %>
  </ul>
<% else %>
  <p> <%= current_user?(@usuario) ? "Você" : @usuario.username %> não está sendo seguido por ninguém! </p>
<% end %>
<%= will_paginate @seguidores, :previous_label => " << Anterior", :next_label => "Proximo >>", renderer: BootstrapPagination::Rails, param_name: 'seguidores_page' %>