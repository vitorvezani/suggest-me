<%= form_for(@usuario) do |f| %>
<%= render 'compartilhado/mensagens_erro', object: f.object %>
<% end %>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <%= form_for(@usuario) do |f| %>
      <div class="form-group">
        <%= f.label :username, "Username" %>*
        <%= f.text_field :username, class: "form-control", placeholder: "stephenhawking" %>
      </div>
      <div class="form-group">
        <%= f.label :email, "E-mail" %>*
        <%= f.text_field :email, class: "form-control", placeholder: "stephen.hawking@email.com" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Senha" %>*
        <%= f.password_field :password, class: "form-control", placeholder: "Min: 6, Max: 40" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmação da Senha" %>*
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Min: 6, Max: 40" %>
      </div>
      <div class="form-group">
        <%= f.submit "Enviar", class: "btn btn-large btn-primary" %>
      </div>
      <p>* Atributos Obrigatórios </p>
    <% end %>
  </div>
</div>