<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "erro") %> proibiram este usuário de ser salvo:</h2>
      <ul>
      <% @usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@usuario) do |f| %>

      <%= f.label :username %>*
      <%= f.text_field :username, placeholder: "stephenhawking" %>

      <%= f.label :email %>*
      <%= f.text_field :email, placeholder: "stephen.hawking@email.com" %>

      <%= f.label :password %>*
      <%= f.password_field :password, placeholder: "Min: 8, Max: 40" %>

      <%= f.label :password_confirmation %>*
      <%= f.password_field :password_confirmation, placeholder: "Min: 8, Max: 40" %>

      <%= f.label :primeiro_nome %>
      <%= f.text_field :primeiro_nome, placeholder: "Stephen" %>

      <%= f.label :ultimo_nome %>
      <%= f.text_field :ultimo_nome, placeholder: "Hawking" %>

      <%= f.label :sexo %>
      <%= f.select(:sexo, '<option value="M">Male</option><option value="F">Female</option>') %>

      <%= f.label :dt_aniversario %>
      <%= f.date_field :dt_aniversario %>
      <hr>
      <%= f.submit "Enviar", class: "btn btn-large btn-primary" %>
      <p></p>
      <p>* Atributos Obrigatórios </p>
    <% end %>
  </div>
</div>

<% end %>
