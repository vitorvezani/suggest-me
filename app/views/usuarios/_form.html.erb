<%= form_for(@usuario) do |f| %>
<%= render 'compartilhado/mensagens_erro', object: f.object %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@usuario) do |f| %>
      <div class="form-group">
      <%= f.label :username, "Username" %>*
      <%= f.text_field :username, class: "form-control", placeholder: "stephenhawking" %>
      </div>
      <div class="form-group">
      <%= f.label :email, "Email" %>*
      <%= f.text_field :email, class: "form-control", placeholder: "stephen.hawking@email.com" %>
      </div>
      <div class="form-group">
      <%= f.label :password, "Senha" %>*
      <%= f.password_field :password, class: "form-control", placeholder: "Min: 8, Max: 40" %>
      </div>
      <div class="form-group">
      <%= f.label :password_confirmation, "Confirmação da Senha" %>*
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Min: 8, Max: 40" %>
      </div>
      <hr>
      <%= f.submit "Enviar", class: "btn btn-large btn-primary" %>
      <hr>
      <p>* Atributos Obrigatórios </p>
    <% end %>
  </div>
</div>

<% end %>