<% if itens.any? %>
  <h4>Itens relacionados (<%= itens.size %>)</h4>
  <hr>
  <!-- Loop para cada item do usuÃ¡rio -->
  <% @count = 1 %>
  <% @itens.each do |item| %>
    <% if @count % 4 == 0 %>
      <div class="row">
    <% end %>
    <div class="col-md-3 text-center">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
              <h4> <%= link_to item.nome_ptbr, item_path(item) %> </h4>
          </h3>
        </div>
        <div class="panel-body">
            <label> <%= truncate(item.descricao,{ :length => 100, omission: '...' }) %> </label>
        </div>
      </div>
    </div>
    <% if @count % 4 == 0 %>
      </div>
      <hr>
    <% end %>
    <% @count = @count + 1 %>
  <% end %>
<% end %>