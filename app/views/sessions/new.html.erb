<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<ol class="breadcrumb">
  <li><a href="#">Home</a>  </li>
  <li class "Active">Login</li>
</ol>

<div class="row">
  <div class="span12 center">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <hr>
      <%= f.submit "Entrar", class: "btn btn-large btn-primary" %>
    <% end %>
    <p></p>
    <p>Novo usu√°rio? <%= link_to "Registre-se agora!", signup_path %></p>
  </div>
</div>