<%= render "compartilhado/breadcrumb", pag: "Sign in" %>

<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="form-group">
        <label> Email</label>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <hr>
      <%= f.submit "Entrar", class: "btn btn-large btn-primary" %>
    <% end %>
    <p></p>
    <p>Novo usu√°rio? <%= link_to "Registre-se agora!", signup_path %></p>
  </div>
</div>